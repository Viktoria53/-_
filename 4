// zv18.cpp : Defines the entry point for the console application.

//

#include "stdafx.h"

#include <math.h>

#include <iostream>

using namespace std;

void main()

{

double x1, y1, x2, y2, x3, y3, n, i, s, r,smax;

setlocale(LC_ALL, "Russian");

printf("\n vvedi kolichestvo treygolnikov \n");

cin >> n;

printf("\n vvedi radius \n");

cin >> r;

smax = -1;

for (i = 1; i <= n; i++)

{

printf("\n vvedi x1,y1 \n");

cin >> x1 >> y1;

printf("\n vvedi x2,y2 \n");

cin >> x2 >> y2;

printf("\n vvedi x3,y3 \n");

cin >> x3 >> y3;

printf("\n n=%5.2f x1=%5.2f y1=%5.2f x2=%5.2f y2=%5.2f x3=%5.2f y3=%5.2f", n, x1, y1, x2, y2, x3, y3);

if ((pow(x1, 2.0) + pow(y1, 2.0) == pow(r, 2.0)) && (pow(x2, 2.0) + pow(y2, 2.0) == pow(r, 2.0)) && (pow(x3, 2.0) + pow(y3, 2.0) == pow(r, 2.0)))

{

printf("\n tochki lezhat na okryzhnosti \n");

s = fabs(0.5*((x1 - x3)*(y2 - y3) - (x2 - x3)*(y1 - y3)));

printf("\n s=%5.2f", s);

if (s > smax) smax=s;

}

else

printf("\n odna iz tochek ne lezhit na okryzhnosti \n");

}

printf("\n smax=%5.2f", smax);

}
