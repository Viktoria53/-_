#include <iostream>
#include <string.h>
 
using namespace std;
 
int main()
{
    setlocale(LC_ALL, "Russian");
    struct PRICE {
        char name[32];
        char nameShop[32];
        int price;
        bool g;
    };
   
    PRICE routes[8];
   
    for (int i = 0; i < 3; i++) {
        cout << "Номер товара: " << i << endl;
        cout << "Название товара: ";
        cin >> routes[i].name;
        cout << "Название магазина: ";
        cin >> routes[i].nameShop;
        cout << "Цена товара: ";
        cin >> routes[i].price;
        cout << endl;
    }
    cout << endl;
    bool flag = false;
    char shop[32];
    cout << "Введите название магазина: ";
    cin >> shop;
    cout << endl;
   
    for (int i = 0; i < 3; i++) {
        if (!strcmp(shop, routes[i].nameShop)) {
            flag = true;
            cout << "Название товара: " << routes[i].name << "\t" <<"Стоимость товара: "<< routes[i].price << endl;
        }
    }
   
    if (!flag) cout << "Такого магазина нет" << endl;
 
    return 0;
}
